[wecom]
# 企业微信应用的企业ID
corpid=
# 企业微信应用的密钥（建议移到 secrets.ini 中，更安全）
corpsecret=
# 企业微信应用的 AgentID（整数）
agentid=
# 接收消息的用户（多个用 | 分隔），先填你自己的企业微信账号
touser=

[db]
# 主数据库驱动：sqlite、sqlserver 或 mysql
driver=sqlite
# SQLite 数据文件路径（相对或绝对路径均可）
sqlite_path=./data/demo.sqlite
# 如果使用 SQL Server，请配置以下参数
host=
port=1433
database=
user=
# password 建议移到 secrets.ini 中（更安全）
password=

# SQL Server 示例配置（driver=sqlserver 时）：
# driver=sqlserver
# host=10.250.122.101
# port=1433
# database=U8CLOUD202102
# user=sa
# password 建议移到 secrets.ini 中

[db_mysql]
# MySQL 数据库配置（独立配置节，可与 [db] 同时使用）
# 是否启用 MySQL 查询（true/false）
enabled=true
# MySQL 数据库连接信息
host=10.250.120.204
port=3306
database=your_database
user=root
# password 建议移到 secrets.ini 中（更安全）
password=

[robot]
# 群机器人完整 webhook 地址（形如：https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=...）
webhook=
# 可选：被@的成员列表，使用 | 分隔，例如：@all|zhangsan
mentioned_list=
# 消息格式：markdown 或 text（默认 markdown）
format=markdown

[message]
# 文本格式模板（可选）：支持占位符 {count} {id} {title} {created_at} {omitted}
title_text=数据库告警：检测到 {count} 条新数据
item_text=id={id}，{title}（{created_at}）
footer_text=更多...（已省略 {omitted} 条）

# Markdown 格式模板（可选）：支持相同占位符
title_markdown=## 数据库告警：检测到 {count} 条新数据
item_markdown=- id={id} ｜ {title} ｜ {created_at}
footer_markdown=> 更多...（已省略 {omitted} 条）
